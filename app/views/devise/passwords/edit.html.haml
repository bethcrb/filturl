%h2.page-header Change your password
= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
  = f.error_notification
  = f.input :reset_password_token, as: :hidden
  = f.full_error :reset_password_token
  .form-group
    .col-xs-12.col-md-4
      = f.input :password, label: 'New password', required: true, autofocus: true, input_html: { class: 'form-control input-sm' }
  .form-group
    .col-xs-12.col-md-4
      = f.input :password_confirmation, label: 'Confirm your new password', required: true, input_html: { class: 'form-control input-sm' }
  .form-group
    .col-xs-12.col-md-4
      = f.button :submit, 'Change my password', class: 'btn-primary btn-sm'
= render 'devise/shared/links'
