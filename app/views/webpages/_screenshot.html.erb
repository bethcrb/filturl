  <div class="tab-pane" id="screenshot_tab">
    <div class="row">
      <div class="span1"></div>
      <div class="span10">
        <% if user_signed_in? %>
          <p><a href="<%= @webpage.screenshot.url %>" target="new"><%= image_tag(@webpage.screenshot.url, class: "thumbnail span9") %></a></p>
        <% else %>
        <div class="alert alert-block text-center">You must <%= link_to "sign in", new_session_path(resource_name) %> or <%= link_to "sign up", new_registration_path(resource_name) %> to view screenshots.</div>
        <% end %>
      </div>
      <div class="span1"></div>
    </div>
  </div>
