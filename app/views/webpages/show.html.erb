<div class="jumbotron subhead">
  <div class="row">
    <div class="span12">
      <h3 style="line-height: 18px;"><%= @webpage.url %></h3>
        <% if @webpage.url != @webpage_request.url %>
        <h6 class="muted" style="padding-left: 1em;"><%= @webpage_request.url %></h6>
        <% end %>
    </div>
  </div>
  <div class="subnav">
    <ul class="nav nav-pills" id="navTabs">
      <li class="active"><a href="#overview_tab" data-target="#overview_tab" data-toggle="pill">Overview</a></li>
      <li><a href="#http_headers_tab" data-target="#http_headers_tab" data-toggle="pill">HTTP Headers</a></li>
      <li><a href="#view_source_tab" data-target="#view_source_tab" data-toggle="pill">View Source</a></li>
      <li><a href="#screenshot_tab" data-target="#screenshot_tab" data-toggle="pill">Screenshot</a></li>
    </ul>
  </div>
</div>
<div class="tab-content">
  <div class="tab-pane active" id="overview_tab">
    <div class="row">
      <div class="span3">
        <table class="table table-condensed table-bordered table-hover">
          <tr>
            <th>IP address</th>
            <td><%= @webpage.primary_ip %></td>
          </tr>
          <tr>
            <th>Redirect count</th>
            <td><%= @webpage_response.redirect_count %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
  <div class="tab-pane" id="http_headers_tab">
    <div class="row">
      <div class="span1"></div>
      <div class="span10">
        <pre><%= @webpage_response.headers %></pre>
      </div>
      <div class="span1"></div>
    </div>
  </div>
  <div class="tab-pane" id="view_source_tab">
    <div class="row">
      <div class="span1"></div>
      <div class="span10">
        <%= raw display_html(@webpage.body) %>
      </div>
      <div class="span1"></div>
    </div>
  </div>
  <div class="tab-pane" id="screenshot_tab">
    <div class="row">
      <div class="span1"></div>
      <div class="span10">
        <% if user_signed_in? %>
          <p><a href="<%= @webpage.screenshot.url %>" target="new"><%= image_tag(@webpage.screenshot.url, class: "thumbnail span9") %></a></p>
        <% else %>
        <div class="alert alert-block text-center">You must <%= link_to "sign in", new_session_path(resource_name) %> or <%= link_to "sign up", new_registration_path(resource_name) %> to view screenshots.</div>
        <% end %>
      </div>
      <div class="span1"></div>
    </div>
  </div>
</div>

